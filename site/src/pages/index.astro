const title = "Home · Syu"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>{title}</title>

		<!-- link favicon svg -->
		<link rel="icon" href="/favicon_512.svg" type="image/svg+xml" />
	</head>
	<body>
		<div class="site-root">
			<div class="hero">
				<img class="hero-rorschach" src="/images/rorschach_bitmap.png" alt="" aria-hidden="true" />
				<h1 class="hero-heading">Hi, I am Chuhan Wang :D</h1>
				<p class="hero-subtitle">Year 2 student at USYD<br>Gamer, Developer (not quite), and Printmaker </p>
				<a class="hero-button" href="#brief">Discover</a>
				<a class="hero-arrow" href="#brief" aria-label="Scroll to brief section">⇓</a>
			</div>


			<section id="brief">
				<div class="brief-columns">
					<div class="brief-meta">
						<h2>Brief</h2>
						<p><b>NAME</b> : Chuhan Wang</p>
						<hr />
						<p><b>SCHOOL</b> : University of Sydney</p>
						<hr />
						<p><b>AGE</b> : 23 Years</p>
						<hr />
						<p><b>HOMETOWN</b> : Weifang, Shandong</p>
						<hr />
						<div class="brief-actions">
							<a class="brief-action" href="mailto:coryritsuko@163.com" aria-label="Email">
								<img src="/icons/mail.svg" alt="" />
							</a>
							<a class="brief-action" href="https://github.com/sh3llfish" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
								<img src="/icons/github-mark.svg" alt="" />
							</a>
							<a class="brief-action" href="https://steamcommunity.com/id/FuckedCowCat/" target="_blank" rel="noopener noreferrer" aria-label="Steam">
								<img src="/icons/steam.svg" alt="" />
							</a>
						</div>
					</div>
					<div class="brief-summary">
						<p>
							I'm building a personal playground for experiments, study notes, and projects that make me curious.
							Expect interactive prototypes, reflections on learning, and a glimpse into what I'm exploring next.
						</p>
					</div>
				</div>
			</section>
		</div>

		<script is:inline>
			if (typeof window !== "undefined") {
				if ('scrollRestoration' in history) {
					history.scrollRestoration = 'manual';
				}

				if (window.location.hash === '#brief') {
					history.replaceState(null, '', window.location.pathname);
				}

				const root = document.querySelector('.site-root');
				if (root) {
					const posX = (Math.random() * 100).toFixed(2);
					const posY = (Math.random() * 100).toFixed(2);
					root.style.setProperty('--tarot-bg-position', `${posX}% ${posY}%`);
				}

				const target = document.querySelector('#brief');
				const scrollers = document.querySelectorAll('.hero-button, .hero-arrow');
				scrollers.forEach((el) => {
					el.addEventListener('click', (event) => {
						event.preventDefault();
						if (target) {
							target.scrollIntoView({ behavior: 'smooth' });
						}
						history.replaceState(null, '', window.location.pathname);
					});
				});
			}
		</script>
	</body>
</html>
